# ============================================================================
# DATABASE
# ============================================================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
#
# Local Development (with Docker):
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/internmatch?schema=public"
#
# Vercel Postgres:
# DATABASE_URL="postgres://default:xxx@xxx-pooler.us-east-1.aws.neon.tech:5432/verceldb?sslmode=require"
#
# Supabase:
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

DATABASE_URL="postgresql://postgres:postgres@localhost:5432/internmatch?schema=public"

# ============================================================================
# CLERK AUTHENTICATION
# ============================================================================

# Get these from https://dashboard.clerk.com/
# After creating your application, find them in:
# API Keys -> Quick Copy -> Next.js

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
CLERK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Clerk sign-in and sign-up URLs (optional, defaults shown)
# NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
# NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# ============================================================================
# OPENAI API (for resume parsing)
# ============================================================================

# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ============================================================================
# RESEND (for email notifications)
# ============================================================================

# Get your API key from https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Email sender address (must be verified in Resend)
# For development, use onboarding@resend.dev
# For production, use your verified domain
RESEND_FROM_EMAIL="InternMatch <onboarding@resend.dev>"

# ============================================================================
# APPLICATION URLs
# ============================================================================

# Your application's public URL
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================

# Options: development | production | test
NODE_ENV="development"

# ============================================================================
# FILE UPLOAD (Optional - for production)
# ============================================================================

# If using cloud storage for resumes (S3, Cloudinary, etc.)
# AWS_ACCESS_KEY_ID="xxx"
# AWS_SECRET_ACCESS_KEY="xxx"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="internmatch-resumes"

# Or Cloudinary
# CLOUDINARY_CLOUD_NAME="xxx"
# CLOUDINARY_API_KEY="xxx"
# CLOUDINARY_API_SECRET="xxx"

# ============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# ============================================================================

# PostHog (product analytics)
# NEXT_PUBLIC_POSTHOG_KEY="xxx"
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Sentry (error tracking)
# SENTRY_DSN="xxx"
# SENTRY_AUTH_TOKEN="xxx"

# ============================================================================
# OPTIONAL: RATE LIMITING
# ============================================================================

# Upstash Redis for rate limiting (optional)
# UPSTASH_REDIS_REST_URL="xxx"
# UPSTASH_REDIS_REST_TOKEN="xxx"

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Skip email sending in development (just log to console)
# SKIP_EMAIL_SEND="true"

# Disable authentication in development (for testing)
# WARNING: Never use this in production!
# DISABLE_AUTH="false"
