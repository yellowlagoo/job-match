{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error", "info", "log"]
      }
    ],
    "@typescript-eslint/no-explicit-any": "error"
  },
  "overrides": [
    {
      "files": [
        "src/app/api/**/*.ts",
        "src/lib/**/*.ts",
        "src/services/**/*.ts"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
